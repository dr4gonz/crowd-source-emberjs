<div class="col-md-6">
  <form>
    <div class="form-group">
      <label for="title">Title:</label>
      {{textarea cols="60" rows="1" value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="date_pub">Date Published:</label>
      {{input value=date_pub id="date_pub"}}
    </div>
    <div class="form-group">
      <label for="image">Book Image:</label>
      {{input value=image id="image"}}
    </div>

    <button class="btn btn-sm btn-primary" {{action 'createBook'}}>Publish</button>
  </form>
</div>
