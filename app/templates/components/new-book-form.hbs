<div class="container">
  <div class="col-sm-6">
    <form>
      <div class="form-group">
        <label for="title">Title:</label>
        {{textarea cols=60 rows=1 value=title id="title" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="date_pub">Date Published:</label>
        {{input value=date_pub id="date_pub" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        {{textarea cols=60 rows=4 value=description id="description" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="image">Book Image:</label>
        {{input value=image id="image" class="form-control"}}
      </div>

      <button class="btn btn-sm btn-primary" {{action 'createBook'}}>Publish</button>
    </form>
  </div>
</div>
