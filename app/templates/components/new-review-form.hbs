{{#if addNewReview}}
<div class='col-md-12'>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="title">title</label>
      {{input value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="body">Description</label>
      {{textarea cols=80 rows=3 value=body id="body"}}
    </div>
    <div class="form-group">
      <label for="rating">rating</label>
      {{input value=rating id="rating"}}
    </div>


    <button class="btn btn-xs btn-primary" {{action 'saveReview'}}>Publish</button>
  </form>
</div>
{{else}}
<div class="row">
  <div class="col-md-12">
    <button class="btn btn-xs btn-primary" {{action 'reviewFormShow'}}>Add a Review</button>
  </div>
</div>
{{/if}}
