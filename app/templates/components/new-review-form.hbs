{{#if addNewReview}}
<div class='col-sm-6'>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="title">title</label>
      {{input value=title id="title" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="body">Description</label>
      {{textarea cols=80 rows=3 value=body id="body" class="form-control"}}
    </div>
    <div class="form-group">
      <label for="rating">rating</label>
      {{input value=rating id="rating" class="form-control" type="number" max="5" min="0" placeholder="0-5"}}
    </div>


    <button class="btn btn-sm btn-primary" {{action 'saveReview'}}>Publish</button>
  </form>
</div>
{{else}}
<div class="row">
  <div class="col-sm-6">
    <button class="btn btn-sm btn-primary" {{action 'reviewFormShow'}}>Add a Review</button>
  </div>
</div>
{{/if}}
